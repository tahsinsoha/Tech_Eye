<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mybganim"
    android:id="@+id/myLayout"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonForColor"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="208dp"
        android:layout_marginEnd="138dp"
        android:layout_marginRight="138dp"
        android:background="@drawable/btn"
        android:onClick="oneclick"
        android:text="Color Recognition"
        tools:ignore="Onclick" />

    <Button
        android:id="@+id/buttonForFace"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonForColor"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="53dp"
        android:layout_marginEnd="140dp"
        android:layout_marginRight="140dp"
        android:background="@drawable/btn"
        android:text="Face Detection" />

    <Button
        android:id="@+id/buttonForText"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonForFace"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="46dp"
        android:layout_marginEnd="139dp"
        android:layout_marginRight="139dp"
        android:background="@drawable/btn"
        android:text="Text Recognition" />

    <Button
        android:id="@+id/buttonForCurrency"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonForText"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="114dp"
        android:layout_marginLeft="114dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/btn"
        android:text="Currency Recognition" />

</RelativeLayout>